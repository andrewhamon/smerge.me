<p id="notice"><%= notice %></p>

<h1>Links</h1>

<table>
  <thead>
    <tr>
      <th>Spotify user</th>
      <th>Github user</th>
      <th>Spotify playlist</th>
      <th>Github repo</th>
      <th>Github file path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.spotify_user_id %></td>
        <td><%= link.github_user_id %></td>
        <td><%= link.spotify_playlist_id %></td>
        <td><%= link.github_repo_name %></td>
        <td><%= link.github_file_path %></td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path %>
